{
  "compilerOptions": {
    "target": "ESNext",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"]
    },
    "types": ["vite/client", "vue"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/types/*.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}